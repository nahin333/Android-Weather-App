<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="#CCCCCC"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/weather_view_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loacation"/>
    <TextView

        android:id="@+id/weather_view_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"/>

    <TextView
        android:id="@+id/weather_view_hum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"/>
    <TextView
        android:id="@+id/weather_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"/>
    <TextView
        android:id="@+id/weather_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"/>
    <TextView
        android:id="@+id/weather_view_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"/>
    <TextView
        android:id="@+id/weather_view_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressuter"/>
</LinearLayout>