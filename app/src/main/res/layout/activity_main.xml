<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.allison.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Welcome To Weather"
        android:fontFamily="casual"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/activity_main_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatue"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="casual"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:id="@+id/activity_main_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show In"
            android:textSize="18dp"
            android:layout_weight="1"
            android:fontFamily="casual"
            />
        <RadioGroup
            android:id="@+id/radio_unit"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/activity_main_celcius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Celsius"
                android:fontFamily="casual"
                android:textSize="18dp"
                />
            <RadioButton
                android:id="@+id/activity_main_fahrenheit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:fontFamily="casual"
                android:text="Fahrenheit"
                />

        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/activity_main_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Choose City"
            android:fontFamily="casual"
            android:layout_weight="6"
            android:entries="@array/city_list">
        <Button
            android:id="@+id/activity_main_go"
            android:layout_width="wrap_content"
            android:text="GO"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
    </LinearLayout>

    <Button
        android:id="@+id/prevButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

</LinearLayout>
